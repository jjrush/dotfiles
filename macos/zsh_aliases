# macOS-specific aliases

alias src='source ~/.zshrc'

# macOS-specific tool aliases
alias mkproj='make_project'

# macOS-specific git aliases  
alias tree='git tree' # this is defined in .gitconfig

# macOS-specific code editor aliases
alias czsh='c ~/.zshrc'
alias cbash='c ~/.zshrc'
alias clias='c ~/.zsh_aliases'
alias cfunc='c ~/.zsh_func'

# macOS-specific work aliases
alias work='cd ~/work'
alias opcua='$(parse) && cd icsnpp-opcua-binary'